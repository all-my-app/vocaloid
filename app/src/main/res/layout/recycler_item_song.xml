<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/song_adap_height_item"
                                    android:layout_marginTop="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/relative_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/relative_thumbnail"
            android:layout_width="@dimen/song_adap_size_item_thumbnail"
            android:layout_height="@dimen/song_adap_size_item_thumbnail"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_normal">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="@dimen/song_adap_size_item_thumbnail"
                android:layout_height="@dimen/song_adap_size_item_thumbnail"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/text_size_smallest"
                android:textColor="@color/colorWhite"
                android:background="@color/colorblackTransparent_1"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/relative_thumbnail"
            android:layout_marginTop="@dimen/margin_normal"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/txt_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorGray"
            android:layout_toEndOf="@id/relative_thumbnail"/>

        <ImageView
            android:id="@+id/img_love"
            android:layout_width="@dimen/song_adap_size_item_icon_love"
            android:layout_height="@dimen/song_adap_size_item_icon_love"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_small"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>